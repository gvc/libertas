<div class="comprimento-12 primeiro">
	<%= f.label :rua, 'Logradouro*' %>
	<%= f.text_field :rua %>
</div>

<div class="comprimento-4 primeiro">
	<%= f.label :bairro, 'Bairro*' %>
	<%= f.text_field :bairro %>
</div>

<div class="comprimento-4">
	<%= f.label :cidade, 'Cidade*' %>
	<%= f.text_field :cidade %>
</div>

<div class="comprimento-4">
	<%= f.label :estado, 'Estado*' %>
	<% if modelo.pessoa.endereco.estado == nil %>
		<%= f.select :estado, grouped_options_for_select(Endereco.lista_estados, 'Pernambuco') %>
	<% else %>
		<%= f.select :estado, grouped_options_for_select(Endereco.lista_estados, modelo.pessoa.endereco.estado) %>
	<% end %>
</div>

<div class="comprimento-4 primeiro">
	<%= f.label :cep, 'CEP' %>
	<%= f.text_field :cep, :maxlength => 8, :onkeypress => 'mascara(this,soNumeros)' %>
</div>